<UserControl x:Class="DigitalLibrary.Views.UserControls.UC_Book"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalLibrary.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="500">
    <StackPanel
        Orientation="Horizontal"
        VerticalAlignment="Center"
        HorizontalAlignment="Right"
        Margin="0,5">

        <Image x:Name="BookImg"
               Width="50"
               Height="50"
               Margin="5,0"/>
        <TextBlock x:Name="TB_BookName"
                   FontSize="20"
                   Margin="5,0"
                   Text=""/>
        <TextBlock x:Name="TB_BookGenre"
                   FontSize="20"
                   Margin="5,0"/>
        <TextBlock x:Name="TB_BookAuthor"
                   FontSize="20"
                   Margin="5,0"/>
        <TextBlock x:Name="TB_BookPublished"
                   FontSize="20"
                   Margin="5,0"/>
        <TextBlock x:Name="TB_BookQuantity"
                   FontSize="20"
                   Margin="5,0"/>
    </StackPanel>
</UserControl>
